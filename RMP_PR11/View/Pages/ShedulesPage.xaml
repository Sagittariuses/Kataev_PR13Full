<Page x:Class="RMP_PR11.View.Pages.ShedulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RMP_PR11.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShedulesPage" Height="255.08" Width="468.275">
    <Grid>
        <ListView x:Name="ShedulesLV" HorizontalAlignment="Left" Height="253" VerticalAlignment="Top" Width="465">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ScheduleID}"/>
                    <GridViewColumn Header="PlaceOfDeparture" DisplayMemberBinding="{Binding PlaceOfDeparture}"/>
                    <GridViewColumn Header="PlaceOfArrival" DisplayMemberBinding="{Binding PlaceOfArrival}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="NumberOfTicketsPurchased" DisplayMemberBinding="{Binding NumberOfTicketsPurchased}"/>
                    <GridViewColumn Header="TotalTickets" DisplayMemberBinding="{Binding TotalTickets}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
